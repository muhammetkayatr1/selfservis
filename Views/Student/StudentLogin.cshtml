
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="fxt-template-animation fxt-template-layout11 loaded">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-12 fxt-bg-color">
                <div class="fxt-content">
                    <div class="fxt-header" style="margin-bottom: 20px">
                        <a href="#" class="fxt-logo"><img src="http://kutuphane.halic.edu.tr/Templates/Default/assets/img/desktop-footer-logo.png" alt="Logo"></a>
                    </div>
                    <div class="fxt-form">
                        <h3 style="text-align: center">Öğrenci/Personel Girişi</h3>
                        <div class="fxt-form">
                            <form class="fix-form-size" action="/Student/StudentInfo" method="POST">
                                <div class="form-group">
                                    <div class="fxt-transformY-50 fxt-transition-delay-1">
                                        <label>Tc kimlik numaranızı giriniz.</label>
                                        <input type="text" class="form-control" name="tc" placeholder="TC Kimlik No" required="required">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="fxt-transformY-50 fxt-transition-delay-4">
                                        <button type="submit" class="fxt-btn-fill">Devam Et</button>
                                    </div>
                                </div>
                            </form>
                            <div>
                                <div class="social-size" style="margin: auto;">
                                    <div class="fxt-style-line">
                                        <div class="fxt-transformY-50 fxt-transition-delay-5">
                                            <h3>Sosyal Medya Hesaplarımız</h3>
                                        </div>
                                    </div>
                                    <ul class="fxt-socials">
                                        <li class="fxt-google">
                                            <div class="fxt-transformY-50 fxt-transition-delay-6">
                                                <a href="#" title="google"><i class="fab fa-google-plus-g"></i><span>Google +</span></a>
                                            </div>
                                        </li>
                                        <li class="fxt-twitter">
                                            <div class="fxt-transformY-50 fxt-transition-delay-7">
                                                <a href="#" title="twitter"><i class="fab fa-twitter"></i><span>Twitter</span></a>
                                            </div>
                                        </li>
                                        <li class="fxt-facebook">
                                            <div class="fxt-transformY-50 fxt-transition-delay-8">
                                                <a href="#" title="Facebook"><i class="fab fa-facebook-f"></i><span>Facebook</span></a>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
